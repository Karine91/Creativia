            each item in blog
                .blog-item
                    .row
                        .row__col.row__col--s-4
                            .blog-item__picture.lazyload(data-bg=`${item.img}`)
                        .row__col.row__col--s-8
                            .blog-item__content
                                .blog-item__title #{item.title}
                                .blog-item__icons
                                    span.blog-item__icon.blog-item__icon--user
                                        +icon('user-solid')
                                        | admin
                                    span.blog-item__icon.blog-item__icon--comments 
